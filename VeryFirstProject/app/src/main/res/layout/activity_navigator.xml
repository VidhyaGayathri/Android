<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"


    tools:context="ci.felight.ci.ActivityNavigator"
    android:background="#f7a4ff">

    TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greet User"
        android:id="@+id/btnGreetUser"
        android:background="#ff7982"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Calculator"
        android:id="@+id/btnLaunchCalci"
        android:background="#14ff0c"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/btnActivityLifeCycle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActivityLifeCycle"
        android:id="@+id/btnActivityLifeCycle"
        android:background="#fff9b7"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnLaunchCalci"
        android:layout_alignStart="@+id/btnLaunchCalci" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google News"
        android:id="@+id/btnGoogleNews"
        android:background="#fffa0c"
        android:layout_alignTop="@+id/btnLaunchCalci"
        android:layout_alignRight="@+id/btnFelightNews"
        android:layout_alignEnd="@+id/btnFelightNews" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Felight News"
        android:id="@+id/btnFelightNews"
        android:background="#ff3103"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/btnGoogleNews"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Applications"
        android:id="@+id/btnPackage"
        android:background="#05e7ff"
        android:layout_below="@+id/btnFelightNews"
        android:layout_alignLeft="@+id/btnGoogleNews"
        android:layout_alignStart="@+id/btnGoogleNews"
        android:layout_marginTop="38dp" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserRegisteration"
        android:id="@+id/btnUserRegisteration"
        android:background="#27ff0a"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:allowUndo="false" />

    <Button
        android:onClick="navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InstagramClone"
        android:id="@+id/btnInsta"
        android:layout_below="@+id/btnPackage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:background="#fcfdff" />

</RelativeLayout>
