<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ci.felight.ci.UserDetailsActivity">

    <Button
        android:onClick="getUserDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Personal Information"
        android:id="@+id/btnPersonalInfo"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnOfficialInfo"
        android:layout_alignStart="@+id/btnOfficialInfo" />

    <Button
        android:onClick="getUserDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Official Information"
        android:id="@+id/btnOfficialInfo"
        android:layout_below="@+id/btnPersonalInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
</RelativeLayout>
